<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="-14dp"
        app:layout_constraintBottom_toBottomOf="@id/event_item_row_title"
        android:id="@+id/event_item_row_icon_image"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/event_item_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:text="title"
        android:textColor="@color/title_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_item_row_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/event_item_row_title"
        app:layout_constraintTop_toBottomOf="@+id/event_item_row_title" />

    <View
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/event_item_row_info"
        android:layout_height="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>