<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExceptPains" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryVariant">@color/lightColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/lightColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightColorSecondary</item>
        <item name="colorSecondaryVariant">@color/lightColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/lightColorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Dialog.Alert.WithOurColors" parent="@style/Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryVariant">@color/lightColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/lightColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightColorSecondary</item>
        <item name="colorSecondaryVariant">@color/lightColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/lightColorOnSecondary</item>
        <!-- 背景模糊度 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="Theme.Dialog.WithOurColors" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryVariant">@color/lightColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/lightColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightColorSecondary</item>
        <item name="colorSecondaryVariant">@color/lightColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/lightColorOnSecondary</item>
